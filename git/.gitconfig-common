[alias]
    ada = add --all
    adai = add --all --interactive
    adap = add --all --patch
    aliases = config --get-regexp alias
    cl = clone
    coa = commit --amend
    cof = commit --fixup
    com = commit --message
    cp = cherry-pick
    cu = checkout
    cub = checkout --branch
    di = diff
    dis = diff --staged
    f = "!git ls-files | grep -i"
    ft = fetch --recurse-submodules
    gr = grep -Ii
    lg = log --date=relative --color --graph --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --abbrev-commit
    lg2 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    ln = !git lg --name-status
    pl = pull --recurse-submodules
    ps = push --atomic
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rb = rebase
    rbi = rebase --interactive
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard
    rs = reset --soft
    rs1 = reset --soft HEAD^
    st = status --short --branch
    wt = worktree
[branch]
    autosetuprebase = always
[color]
    ui = true
[core]
    attributesfile = ~/.gitattributes
    # editor = atom --wait
    excludesfile = ~/.gitignore
    fscache = true
    safecrlf = false
    whitespace = blank-at-eol,blank-at-eof,space-before-tab,trailing-space,tab-indent
[diff]
    compactionHeuristic = true
[push]
    default = simple
[user]
    useconfigonly = true
[rebase]
    autosqash = true
    autostash = true
[clean]
    requireForce = false
[submodule]
    fetchJobs = 4
[commit]
    template = ~/.git_commit_message.txt

# git mergetool --tool-help
[merge]
    tool = mymeld
    conflictstyle = diff3
    # http://www.drdobbs.com/tools/three-way-merging-a-look-under-the-hood/240164902
[mergetool "mymeld"]
    cmd = meld $LOCAL $BASE $REMOTE -o $MERGED --auto-merge

[diff]
    tool = mymeld
[difftool]
    #prompt = false
[difftool "mymeld"]
    cmd = meld $LOCAL $REMOTE
